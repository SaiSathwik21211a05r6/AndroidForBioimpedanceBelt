<!-- side_arrow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color, you can customize the color -->
    <item android:drawable="@android:color/transparent" />

    <!-- Arrow shape, adjust the size and color as needed -->
    <item
        android:right="0dp"
        android:left="0dp"
    android:top="0dp"
    android:bottom="0dp">
    <rotate
        android:fromDegrees="75"
        android:toDegrees="45"
        android:pivotX="25%"
        android:pivotY="-18%">
        <shape android:shape="rectangle">
            <solid android:color="#000000" />  <!-- Arrow color -->
        </shape>
    </rotate>
</item>
    </layer-list>
